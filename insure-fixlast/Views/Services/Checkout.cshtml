@model insure_fixlast.Models.CheckoutViewModel

<title>Review Your Order</title>
<style>
    .container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }

    h1, h2 {
        color: #343a40;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        color: #fff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .company-info {
        margin-top: 40px;
    }

        .company-info p {
            margin-bottom: 10px;
        }</style>
<div class="container">
    <h1>Review Your Order</h1>

    @if (Model.SelectedServices != null && Model.SelectedServices.Count > 0)
    {
        <h2>Selected Services:</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Service</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal totalPrice = 0;
                }
                @foreach (var service in Model.SelectedServices)
                {
                    var quantity = Model.ServiceQuantities != null && Model.ServiceQuantities.ContainsKey(service.Id) ? Model.ServiceQuantities[service.Id] : 1;
                    var total = service.Price * quantity;
                    totalPrice += total;
                    <tr>
                        <td>@service.Name</td>
                        <td>$@service.Price</td>
                        <td>@quantity</td>
                        <td>$@total</td>
                    </tr>
                }
            </tbody>
        </table>
        <p><strong>Total Price:</strong> $@totalPrice</p>
    }
    else
    {
        <p>No services selected.</p>
    }

    @if (!string.IsNullOrEmpty(Model.CompanyName))
    {
        <div class="company-info">
            <h2>Company Information:</h2>
            <p><strong>Company Name:</strong> @Model.CompanyName</p>
            <p><strong>Email:</strong> @Model.CompanyEmail</p>
            <p><strong>Phone:</strong> @Model.CompanyPhone</p>
            <p><strong>Address:</strong> @Model.CompanyAddress</p>
        </div>
    }

    <div>
        <a asp-action="PlaceOrder" class="btn btn-primary">Place Order</a>
    </div>
</div>
